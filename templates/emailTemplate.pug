//- resetPassword.pug
doctype html
html
  head
    style.
      .container {
        font-family: Arial, sans-serif;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
      }
      .header {
        color: #333;
        font-size: 24px;
        text-align: center;
        margin-bottom: 20px;
      }
      .content {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      }
      .otp-code {
        font-size: 32px;
        color: #2c3e50;
        text-align: center;
        letter-spacing: 5px;
        margin: 20px 0;
        font-weight: bold;
      }
      .note {
        color: #666;
        font-size: 14px;
        text-align: center;
        margin-top: 20px;
      }
      .footer {
        font-size: 12px;
        color: #999;
        text-align: center;
        margin-top: 30px;
      }
  body
    .container
      .header Reset Your Password
      .content
        p Hello #{username},
        p We received a request to reset your password. Use the following OTP code to proceed:
        .otp-code #{otp}
        p This code will expire in #{expiration} minutes.
        .note If you didn't request this, please ignore this email or contact our support team.
      .footer
        | Â© 2025 Your Company. All rights reserved.