mixin tree(items,parentId ="", level = 1)
  each item in items
    - const prefix = Array(level + 1).join("--- ")
    option(value=item._id
          selected= (item._id==parentId?true:false) 
    ) #{prefix}#{item.title}
        if item.children && item.children.length > 0
            +tree(item.children, parentId, level + 1)
            