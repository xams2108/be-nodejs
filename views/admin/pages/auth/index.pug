extends ../../layouts/auth
include ../../mixins/alert

block main
    +alertSuccess(5000)
    +alertError(5000)
    .login-container
        h2 Đăng nhập
        form(action=`/${admin}/auth/login`, method="POST")
            .form-group
                label(for="email") Email
                input#email.form-control(type="email", name="email", placeholder="Nhập email")
            .form-group
                label(for="password") Mật khẩu
                input#password.form-control(type="password", name="password", placeholder="Nhập mật khẩu")
            button.btn.btn-primary.btn-login(type="submit") Đăng nhập