extends ../../layouts/default
include ../../mixins/alert

block main
    +alertSuccess(5000)
    +alertError(5000)

    h1(class="mb-4") Quản lý tài khoản

    .card.mb-3
        .card-header Danh sách các tài khoản
        .card-body
            .row
                .col-8
                .col-4.text-right
                    a(
                        href=`/${admin}/account/create`
                        class="btn btn-outline-success"
                    ) + Tạo tài khoản mới

            if(accounts && accounts.length > 0)
                table(class="table table-hover table-sm")
                    thead
                        tr
                            th STT
                            th Tên
                            th Email
                            th Role
                            th Hành động
                    tbody
                        each item, index in accounts
                            tr
                                td #{index + 1}
                                td #{item.fullname}
                                td #{item.email}
                                td
                                    each role in roles
                                        if(item.role_id == role._id)
                                            span #{role.title}
                                td
                                    form(
                                        action=`/${admin}/roles/delete/${item.id}?_method=PATCH`
                                        method="POST"
                                    )
                                        a(
                                            class="btn btn-secondary btn-sm"
                                            href=`/${admin}/roles/detail/${item.id}`
                                        ) Chi tiết
                                        a(
                                            class="btn btn-warning btn-sm ml-1"
                                            href=`/${admin}/roles/edit/${item.id}`
                                        ) Sửa
                                        button(
                                            class="btn btn-danger btn-sm ml-1"
                                            type="submit"
                                        ) Xóa
            else
                h3(class="text-center") Chưa có tài khoản nào được tạo