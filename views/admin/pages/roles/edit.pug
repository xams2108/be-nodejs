extends ../../layouts/default
include ../../mixins/alert
block main
    +alertSuccess(5000)
    form(action=`/${admin}/roles/edit/${role.id}?_method=PATCH` method="POST")
        div(class="form-group")
            label(for="title") Tiêu đề
            input(type="text" class="form-control" id="title" name="title" value=role.title required )
        
        div(class="form-group")
            label(for="desc") Mô tả
            input(type="text" class="form-control" id="desc" name="description" value=role.description)

        div(class="form-group")
            button(type="submit" class="btn btn-primary") Sửa 
