extends ../../layouts/auth.pug
include ../../mixins/alert

block content
    +alertError(5000)
    +alertSuccess(5000)
    .auth-form
        h2.text-center.mb-4 Nhập mã OTP
        form(action="/user/password/otp", method="POST")
            input(type="hidden", name="email", value=email)
            
            .mb-3
                label.form-label(for="otp") Mã xác nhận
                input.form-control(
                    type="text", 
                    id="otp", 
                    name="otp", 
                    placeholder="Nhập 6 chữ số",
                    required
                )
                small.text-muted Mã đã gửi đến #{email}
            
            button.btn.btn-primary.w-100.mb-3(type="submit") Xác nhận
            button.btn.btn-outline-secondary.w-100(type="button") Gửi lại mã
        
        .mt-3.text-center
            a(href="/auth/login") Quay lại đăng nhập